lista = [1, 2,2, 3, 4]

# BŁĘDNE podejście
for x in lista:
    if x % 2 == 0:
        lista.remove(x)
print(lista)  # [1, 3] — ale 3 zostało, bo iteracja się przesunęła

# POPRAWNE podejście
lista = [1, 2, 3, 4]
for x in lista[:]:  # kopia listy
    if x % 2 == 0:
        lista.remove(x)
print(lista)  # [1, 3] — teraz działa jak trzeba